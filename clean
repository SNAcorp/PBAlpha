from RFIDReader import RFIDReader
from ButtonReader import ButtonReader
from DrinkDispenser import DrinkDispenser
from ReciptModel import Recipt
from SessionLoader import SessionMonitor


class ProgramExitManager:
    def __init__(self, RFIDReader, ButtonReader, Recipt):
        self.button_clean = ButtonReader
        self.recipt_clean = Recipt
        self.RFID_clean = RFIDReader

    @property
    def RFID_clean(self):
        self.RFID_clean.end_read

    @property
    def clean_button(self):
        self.button_clean.clean

    @property
    def recipt_clean(self):
        self.recipt_clean.clean_res
