from Storage import Storage

class ProgramExitManager:
    __Button = None
    __RFID = None
    __Recipt = None

    @button.setter
    def button(self, ButtonReader):
        self.__Button = ButtonReader

    @rfid.setter
    def rfid(self, RFIDReader):
        self.__RFID = RFIDReader

    @recipt.setter
    def recipt(self, ReciptModel):
        self.__Recipt = ReciptModel

    def clean_rfid(self):
        if __RFID != None:
            self.__RFID.clean

    def clean_button(self):
        if __Button != None:
            self.__Button.clean

    def clean_recipt(self):
        if __Recipt != None:
            self.__Recipt.clean

    def clean_all(self):
        self.__RFID.clean
        self.__Button.clean
        self.__Recipt.clean

    def pin_extra_clean(self):
        GPIO.setmode(GPIO.BOARD)
        for bpin, lpin, ppin in zip(Storage.button_pin, Storage.led_pin, Storage.pump_list):
            GPIO.cleanup(bpin)
            GPIO.cleanup(lpin)
            GPIO.cleanup(ppin)

    def clean(self):
        self.__Button = None
        self.__RFID = None
        self.__Recipt = None
